<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:orientation="vertical"
     android:background="@drawable/background_welcome"
     android:id="@+id/parentLayout">
    
    <LinearLayout
         android:layout_height="0dp"
         android:layout_width="match_parent"
         android:gravity="center"
         android:layout_weight="1" >
    
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/welcome"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:fontFamily="@font/jua_regular"
            android:textSize="50sp" />
        
    </LinearLayout>
    
    <LinearLayout
         android:layout_height="0dp"
         android:layout_width="match_parent"
         android:gravity="center"
         android:layout_weight="1" >
        
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_sync" />
    
    </LinearLayout>
    
    <LinearLayout
         android:layout_height="0dp"
         android:layout_width="match_parent"
         android:gravity="center"
         android:layout_weight="1" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/jua_regular"
            android:text="Log in to sync your notes with Dropbox"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </LinearLayout>
    
    <LinearLayout
         android:layout_height="0dp"
         android:layout_width="match_parent"
         android:gravity="center"
         android:orientation="vertical"
         android:layout_weight="1" >
    
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/signin"
            android:layout_margin="10dp"
            android:backgroundTint="@android:color/white"
            android:foreground="@drawable/button_background"
            android:textColor="@android:color/black"
            android:drawableLeft="@drawable/dropbox_logo"
            android:text="Continue with Dropbox" />
        
        <Button
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             style="@style/Widget.Material3.Button.TextButton"
             android:id="@+id/close"
             android:text="continue without sync"
             android:fontFamily="@font/jua_regular"
             android:textColor="@color/white" />
        
    
    </LinearLayout>

</LinearLayout>